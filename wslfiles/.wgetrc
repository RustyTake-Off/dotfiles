# wget - https://www.gnu.org/software/wget/manual/html_node/Wgetrc-Commands.html

# Force continuation of preexistent partially retrieved files
continue = on

# Add a `.html` extension to `text/html` or `application/xhtml+xml` files that lack one, or a `.css` extension to
# `text/css` files that lack one
adjust_extension = on

# Retry even when the connection was refused
retry_connrefused = on

# Ignore `robots.txt`
# robots = off

# Print the HTTP and FTP server responses
server_response = on

# Wait 60 seconds before timing out
timeout = 60

# Set number of retries per URL
tries = 3

# Use different user agents
# https://gist.github.com/pzb/b4b6f57144aea7827ae4
# https://deviceatlas.com/blog/list-of-user-agent-strings
# user_agent =
