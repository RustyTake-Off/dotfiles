# Settings apply across all Linux distributions running on WSL 2
# https://learn.microsoft.com/en-us/windows/wsl/wsl-config
[wsl2]

# How much memory to assign to the WSL 2 VM
memory=16GB

# How many logical processors to assign to the WSL 2 VM
processors=2

# How much swap space to add to the WSL 2 VM, 0 for no swap file. Swap storage
# is disk-based RAM used when memory demand exceeds limit on hardware device
swap=0

# Experimental features
# https://learn.microsoft.com/en-us/windows/wsl/wsl-config#experimental-settings
[experimental]

# Automatically releases cached memory after detecting idle CPU usage. Set to
# gradual for slow release, and dropcache for instant release of cached memory.
autoMemoryReclaim=gradual
